{
    "project_name": "My New Project",
    "project_description": "Short description",
    "version": "0.1.0",
    "author": "{{ 'Author' }}",
    "email": "{{ 'author@email.com' }}",
    "github_user": "{{ 'username' }}",
    "license": [
        "MIT",
        "BSD-3",
        "GNU GPL v3.0",
        "Apache Software License 2.0"
    ],
    "documentation_type": [
        "reStructuredText",
        "Markdown"
    ],
    "_project_slug": "{{ cookiecutter.project_name|lower|replace(' ', '-') }}",
    "_package_name": "{{ cookiecutter._project_slug|replace('-', '') }}",
    "_use_markdown": "{{ True if cookiecutter.documentation_type == 'Markdown' else False }}",
    "_doc_ext": "{{ 'md' if cookiecutter._use_markdown else 'rst' }}"
}
