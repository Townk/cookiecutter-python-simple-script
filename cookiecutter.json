{
    "project_name": "My New Project",
    "project_description": "Short description",
    "version": "0.1.0",
    "author": "{{ 'Author' }}",
    "email": "{{ 'author@email.com' }}",
    "github_user": "{{ 'username' }}",
    "license": [
        "None",
        "MIT",
        "BSD-3",
        "GNU GPL v3.0",
        "Apache Software License 2.0"
    ],
    "documentation_type": [
        "reStructuredText",
        "Markdown"
    ],
    "create_git_repository": [
        "Yes",
        "No"
    ],
    "publish_to_github": [
        "Yes",
        "No"
    ],
    "__project_slug": "{{ cookiecutter.project_name | slugify }}",
    "__package_name": "{{ cookiecutter.project_name | slugify | replace('-', '') }}",
    "__use_markdown": "{{ cookiecutter.documentation_type == 'Markdown' }}",
    "__doc_ext": "{{ 'md' if cookiecutter.documentation_type == 'Markdown' else 'rst' }}"
}
