{# -*- mode: jinja2; -*- #}
{%- macro heading(text, title) -%}
{% if cookiecutter.__use_markdown == "y" -%}
{{ "#" if title else "##" }} {{ text }}
{%- else -%}
{{ text }}
{% for _ in text %}{{ "=" if title else "-" }}{% endfor %}
{%- endif %}
{%- endmacro -%}
{%- macro link(text, url) -%}
{% if cookiecutter.__use_markdown == "y" -%}
[{{ text }}]({{ url }})
{%- else -%}
`{{ text }} <{{ url }}>`_
{%- endif %}
{%- endmacro -%}
